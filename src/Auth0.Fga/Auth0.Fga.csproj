<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>Auth0.Fga</AssemblyName>
    <PackageId>Auth0.Fga</PackageId>
    <OutputType>Library</OutputType>
    <Authors>Auth0</Authors>
    <Company>Auth0</Company>
    <AssemblyTitle>Auth0 FGA SDK for .NET</AssemblyTitle>
    <Description>.NET SDK for Auth0 Fine Grained Authorization (FGA)</Description>
    <Copyright>Auth0Â® Inc.</Copyright>
    <RootNamespace>Auth0.Fga</RootNamespace>
    <Version>0.3.0</Version>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Auth0.Fga.xml</DocumentationFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/auth0-lab/fga-dotnet-sdk.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>https://github.com/auth0-lab/fga-dotnet-sdk/blob/main/CHANGELOG.md</PackageReleaseNotes>
    <PackageTags>auth0-fga;authorization;fga;fine-grained-authorization;rebac;zanzibar</PackageTags>
    <PackageIcon>FGAIcon.png</PackageIcon>
    <Nullable>annotations</Nullable>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Models" />
    <None Include="../../assets/FGAIcon.png" Pack="true" Visible="false" PackagePath="" />
    <None Include="../../README.md" Pack="true" PackagePath=""/>
  </ItemGroup>

</Project>
